<mt:SetVarBlock name="pagetitle">Action Stream</mt:SetVarBlock>
<$mt:Var name="RBLibraries" value="'youtube' , 'ashome', 'lightbox'"$>
<$mt:Include module="Header"$>

<div id="content">
	<div id="action-stream-homepage">
		
		<div>
			<h2>Recent Photos</h3>
			<div id="home-photos">
				<ol id="photostream">
					<mt:ActionStreams lastn="36" stream="photos">
						<li>
							<a href="<$MTStreamActionURL$>" target="_blank" title="<$MTStreamActionTitle$>" style="background-image: url(<mt:StreamActionThumbnailURL>);" class="lightbox-link"></a>
						</li>
					</mt:ActionStreams>
				</ol>
			</div>
			<div id="photo-pager"></div>
		</div>
		
		
		
	</div>
</div>
<!-- end #content -->
<div id="sidebar">
	<ul>
		<$mt:WidgetSet name="Elsewhere Sidebar"$>
	</ul>
</div>
<!-- end #sidebar -->
<div style="clear: both;">&nbsp;</div>

<$mt:Include module="Footer"$>